<% if flash[:error] %>
  <h1><%= flash[:error] %></h1>
<% end %>
<h1>Log in</h1>

<%= form_with url: sessions_path, method: :post do |form| %>
  
  <div>
    <%= form.label :email %>
    <%= form.email_field :email%>
  </div>

  <div >
    <%= form.label :password %>
    <%= form.password_field :password%>
  </div>

  <%= form.submit "Log in", class: "text-blue-100" %>
<% end %>

