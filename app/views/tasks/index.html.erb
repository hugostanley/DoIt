<div class="flex justify-between">
<h1 class="text-4xl mx-2">Tasks</h1>
<%= link_to "Create New Task", new_task_path(@user) %>
</div>

<section class="flex flex-col mt-5">
<% @tasks.each do |task| %>
  <%= link_to  user_task_path(id: task.user_id, task_id: task[:id]) do %>
    <div class="flex flex-col w-full h-fit hover:shadow-lg transform hover:-translate-y-1 hover:bg-primaryGray transition-all duration-200 border border gray-400 shadow-sm rounded-md mx-2 p-2">
      <span class="text-3xl"><%= task.title %></span>
      <span class="text-lg"><%= task.description %></span>
      <span class="text-md"><%= task.deadline.strftime("%B, %A %d") %></span>
    </div>
  <% end %>
<% end %>
</section>
