<section>
  <%= link_to "ALL TASKS", user_tasks_path %>
  <div class="flex flex-col w-full h-fit border border gray-400 shadow-sm rounded-md mx-2 p-2">
    <span class="text-3xl"><%= @task[:title] %></span>
    <span class="text-3xl"><%= @task[:description] %></span>
      <span class="text-md">deadline: <% if @task.deadline.present? %>
        <%= @task.deadline.strftime("%B, %A %d") %>
        <% else %>
          no due date
        <% end %>
      </span>
      <span class="text-md">completed: <% if @task.is_completed? %>
        <%= @task.date_completed.strftime("%B, %A %d") %>
        <% else %>
          not yet completed
        <% end %>
      </span>
  </div>
</section>
