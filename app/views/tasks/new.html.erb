<h1>Create new Todo</h1>
<%= form_with model: @task, url: user_tasks_path do |form| %>
  <div>
    <%= form.label :title %> <br>
    <%= form.text_field :title %> <br>
    <% @task.errors.full_messages_for(:title).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>
  <div>
    <%= form.label :description %> <br>
    <%= form.text_field :description %> <br>
    <% @task.errors.full_messages_for(:description).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>
  <div>
    <%= form.label :deadline %> <br>
    <%= form.date_field :deadline %> <br>
    <% @task.errors.full_messages_for(:deadline).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>
  <div>
    <button><%= form.submit %></button>
  </div>
<% end %>
